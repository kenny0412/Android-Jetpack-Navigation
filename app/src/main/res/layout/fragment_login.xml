<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tit_peso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/peso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_peso"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_calc_peso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/calcular_peso"
        android:background="@drawable/backgraund_color_button"
        android:textColor="@drawable/text_color_apereace"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/tit_peso"
        app:layout_constraintStart_toStartOf="@+id/tit_peso"
        app:layout_constraintTop_toBottomOf="@+id/tit_peso" />

</androidx.constraintlayout.widget.ConstraintLayout>